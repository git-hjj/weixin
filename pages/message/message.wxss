/* pages/message/message.wxss */

page{
	background-color:#f1f1f1;
}

.card{
	background-color:#fff;
	border:1rpx solid #ddd;
	border-radius:10rpx;
	margin:60rpx 20rpx;
	padding:20rpx 30rpx;
	display:flex;
	flex-direction:column;
}

.card-title{
	font-size:20px;
	margin-bottom: 20rpx;
}
.card-time{
	font-size:14px;
	color:#ccc;
	 margin-bottom:20rpx;
	 padding-bottom: 20rpx;
	 border-bottom:1rpx solid #ccc; 
}
.card-desc{
	font-size:16px;	 
	margin: 20rpx 0rpx;
	padding-bottom: 20rpx;
	border-bottom:1rpx solid #ddd; 
	color:#333;
}
.card-read{
	font-size: 14px;
	color:#666;
	
}
.card-img{
	width: 100%;
	height:300rpx;

}
.card-read::after{
	content:"";
	width:20rpx;
	height:20rpx;
	border-top: 1rpx solid #ccc ;
	border-right: 1rpx solid #ccc;
  /* display: block; */
  transform: rotate(45deg);
}
