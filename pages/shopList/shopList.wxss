page{
	background-color: #f1f1f1;
}
.shop{
	padding:20rpx;
	border-bottom: 1rpx solid #ddd;
	display: flex;
	position: relative;
	
}

.shop-image{
	width: 160rpx;
	height: 160rpx;
	margin-right:20rpx;
}

.shop-info{
    width:520rpx;
    display: flex;
    flex-direction:column;
    font-size: 12px;
    color:#333;
    line-height:1.4;
}

.shop-title{
	font-size: 16px;
	color:#333;
	width:380rpx;
	overflow:hidden;
	text-overflow:ellipsis;
	white-space: nowrap;
}
.shop-star{
  position: absolute;
  right:20rpx;
  top:20rpx;
 
}
